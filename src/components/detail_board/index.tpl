<div class="detail-board cover clearfix">
  <div class="container">
    <div class="left">
      <div class="pic">
        <img src="{{ pic }}" class="J_phonePic" alt="{{ phone_name }}">
      </div>
    </div>
    <div class="right">
      <h1 class="name">{{ phone_name }}</h1>
      <p class="slogan">{{ slogan }}</p>
      <p class="price">{{ default_price }}元起</p>
      {{ title_1 }}
      <div class="content-wrapper clearfix J_versions">
        {{ versions }}
      </div>
      {{ title_2 }}
      <div class="content-wrapper clearfix J_colors">
        {{ colors }}
      </div>
      <div class="content-wrapper clearfix J_btnGroup">
        {{ btnGroup }}
      </div>
    </div>
  </div>
</div>